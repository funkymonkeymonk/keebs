{
    "$schema": "https://opencode.ai/config.json",
    "theme": "opencode",
    "autoupdate": true,
    "formatter": {
        "alejandra": {
            "command": ["alejandra"],
            "extensions": [".nix"]
        }
    },
    "lsp": {
        "nixd": {
            "command": ["nixd"],
            "extensions": [".nix"],
            "initialization": {
                "nixd": {
                    "nixpkgs": {
                        "expr": "import (builtins.getFlake(toString ./.)).inputs.nixpkgs { }"
                    },
                    "formatting": {
                        "command": ["alejandra"]
                    }
                }
            }
        }
    },
    "mcp": {
        "devenv": {
            "type": "local",
            "command": ["devenv", "mcp"],
            "enabled": true
        }
    },
    "share": "manual"
}
